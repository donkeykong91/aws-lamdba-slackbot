{
  "root": true,
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single", {"avoidEscape":  true}],
    "indent": ["error", "tab"]
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  }
}